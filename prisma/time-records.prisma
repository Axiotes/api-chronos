enum TimeRecordsType {
  ARRIVAL
  EXIT
}

model TimeRecords {
  id         Int              @id @default(autoincrement())
  hour       String           
  employeeId Int
  date       DateTime         @default(now())
  type       TimeRecordsType
  createdAt  DateTime         @default(now())
  updatedAt  DateTime?

  employee   Employee         @relation(fields: [employeeId], references: [id])
}